<!-- パーシャル化したビューで保存失敗しrenderされると、url指定のpathがバグり保存に失敗するのでパーシャル化はしない -->
<!--要相談-->

<h1><%= t("layout.admin.edit_user") %></h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, t("layout.views.error_indicate")) %></h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true, url: admin_user_path) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :admin %>
  <%= f.check_box :admin %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>

<%= link_to t("layout.views.back"), admin_users_path %>